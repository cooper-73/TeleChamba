<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textListaPostulantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="24dp"
        android:text="Lista de postulantes"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkable_list_trabajadores" />

    <TextView
        android:id="@+id/textViewDescripcionOwner"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/checkable_list_trabajadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textEmpresaNombre8"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombreOwner"
        tools:text="Descripcion" />

    <TextView
        android:id="@+id/textEmpresaNombre8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="80dp"
        android:text="Descripcion:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textViewDescripcionOwner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewNombreOwner" />

    <TextView
        android:id="@+id/textViewNombreOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/tvProjectTittle2"
        app:layout_constraintTop_toBottomOf="@+id/tvProjectTittle2"
        tools:text="Nombre de Empresa" />

    <TextView
        android:id="@+id/textEmpresaNombre7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="Empresa: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProjectTittle2" />

    <TextView
        android:id="@+id/tvProjectTittle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="PROYECTO"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textEmpresaNombre7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDespedirTrabajador"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="24dp"
        android:onClick="onClick"
        android:text="Despedir Trabajador"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSeleccionarPostulante"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSeleccionarPostulante"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="24dp"
        android:onClick="onClick"
        android:text="Seleccionar postulantes"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDespedirTrabajador" />

    <ListView
        android:id="@+id/checkable_list_postulantes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDespedirTrabajador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textListaPostulantes" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="8dp"
        android:text="Lista de Trabajadores"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/checkable_list_trabajadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcionOwner" />

    <ListView
        android:id="@+id/checkable_list_trabajadores"
        android:layout_width="345dp"
        android:layout_height="133dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>